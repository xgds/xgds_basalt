 <style type="text/css">
   .flotPlot {
       width: 100%;
       height: 200px;
       margin-bottom: 10px;
   }
 </style>

<div> <strong>{{instrument_name}}</strong> 
	  <a id="edit_instrument_button" href="/xgds_instrument/edit/{{instrument_name}}/{{pk}}" class="btn btn-primary" target="_blank">Edit</a>
</div>

{{#if has_element_percents }}
<div id="pxrf_element_div" style="padding-top: 8px;">
	<table id="pxrf_element_table">
		<thead>
  			<tr>
     			<th>Element</th>
     			<th>Percent</th>
     			<th>Error</th>
  			</tr>
 		</thead>
	</table>
	<strong>Total %:&nbsp;</strong>{{prettyDecimal fillin_total_percent}}
</div>
{{/if}}

	<table>
		{{#if name}}
		<tr>
			<th><label for="id_name">Name:</label></th>
			<td>{{name}}</td>
		</tr>
		{{/if}}
		{{#if label}}
		<tr>
			<th><label for="id_name">Label:</label></th>
			<td>{{label}}</td>
		</tr>
		{{/if}}
		{{#if description}}
		<tr>
			<th><label for="id_description">Description:</label></th>
			<td>{{description}}</td>
		</tr>
		{{/if}}
		{{#if elements}}
		<tr>
			<th><label for="id_elements">Elements:</label></th>
			<td>{{ minerals }}</td>
		</tr>
		{{/if}}
		
		<tr>
			<th><label for="id_acquisition_time">Acquisition time:</label></th>
			<td>{{prettyTime acquisition_time acquisition_timezone}}</td>
		</tr>
		{{#if flight_name}}
		<tr>
			<th><label for="id_flight">EVA:</label></th>
			<td>{{flight_name}}</td>
		</tr>
		{{/if}}
		{{#if ev_name}}
		<tr>
			<th><label for="id_ev_name">Asset:</label></th>
			<td>{{ev_name}}</td>
		</tr>
		{{/if}}
		{{#if collector_name}}
		<tr>
			<th><label for="id_ev_name">Collector:</label></th>
			<td>{{collector_name}}</td>
		</tr>
		{{/if}}
		{{#if manufacturer_data_file_url}}
		<tr>
			<th><label for="id_manufacturer_data_file">Manufacturer data file (.pdz):</label></th>
			<td><a href="{{manufacturer_data_file_url}}">{{filename manufacturer_data_file_url}}</a></td>
		</tr>
		{{/if}}
		{{#if portable_data_file_url}}
		<tr>
			<th><label for="id_portable_data_file">Portable data file (.csv):</label></th>
			<td><a href="{{portable_data_file_url}}">{{filename portable_data_file_url}}</a></td>
		</tr>
		{{/if}}
		{{#if element_results_csv_file_url}}
		<tr>
			<th><label for="id_element_results_csv_file_url">Element Results File (.csv):</label></th>
			<td><a href="{{element_results_csv_file_url}}">{{filename element_results_csv_file_url}}</a></td>
		</tr>
		{{/if}}
		<tr>
			<th><label for="id_latitude">Latitude:</label></th>
			<td>{{lat}}</td>
		</tr>
		<tr>
			<th><label for="id_longitude">Longitude:</label></th>
			<td>{{lon}}</td>
		</tr>
		{{#if alt}}
		<tr>
			<th><label for="id_altitude">Altitude:</label></th>
			<td>{{alt}}</td>
		</tr>
		{{/if}}
		{{#if durationTime}}
		<tr>
			<th><label for="id_durationTime">Duration Time(s):</label></th>
			<td>{{durationTime}}</td>
		</tr>
		{{/if}}
		{{#if ambientTemperature}}
		<tr>
			<th><label for="id_ambientTemperature">Ambient Temperature (&deg;{{temperatureUnits}}):</label></th>
			<td>{{ambientTemperature}}</td>
		</tr>
		{{/if}}
		{{#if detectorTemperature}}
		<tr>
			<th><label for="id_detectorTemperature">Detector Temperature (&deg;{{temperatureUnits}}):</label></th>
			<td>{{detectorTemperature}}</td>
		</tr>
		{{/if}}
		{{#if validAccumulatedCounts}}
		<tr>
			<th><label for="id_validAccumulatedCounts">Valid Accumulated Counts:</label></th>
			<td>{{validAccumulatedCounts}}</td>
		</tr>
		{{/if}}
		{{#if rawAccumulatedCounts}}
		<tr>
			<th><label for="id_rawAccumulatedCounts">Raw Accumulated Counts:</label></th>
			<td>{{rawAccumulatedCounts}}</td>
		</tr>
		{{/if}}
		{{#if validCountLastPacket}}
		<tr>
			<th><label for="id_validCountLastPacket">Valid Count Last Packet:</label></th>
			<td>{{validCountLastPacket}}</td>
		</tr>
		{{/if}}
		{{#if rawCountLastPacket}}
		<tr>
			<th><label for="id_rawCountLastPacket">Raw Count Last Packet:</label></th>
			<td>{{rawCountLastPacket}}</td>
		</tr>
		{{/if}}
		{{#if liveTime}}
		<tr>
			<th><label for="id_liveTime">Live Time(s):</label></th>
			<td>{{liveTime}}</td>
		</tr>
		{{/if}}
		{{#if hVDAC}}
		<tr>
			<th><label for="id_hVDAC">HV DAC:</label></th>
			<td>{{hVDAC}}</td>
		</tr>
		{{/if}}
		{{#if hVADC}}
		<tr>
			<th><label for="id_hVADC">HV ADC:</label></th>
			<td>{{hVADC}}</td>
		</tr>
		{{/if}}
		{{#if filamentDAC}}
		<tr>
			<th><label for="id_filamentDAC">Filament DAC:</label></th>
			<td>{{filamentDAC}}</td>
		</tr>
		{{/if}}
		{{#if filamentADC}}
		<tr>
			<th><label for="id_filamentADC">Filament ADC:</label></th>
			<td>{{filamentADC}}</td>
		</tr>
		{{/if}}
		{{#if pulseLength}}
		<tr>
			<th><label for="id_pulseLength">Pulse Length:</label></th>
			<td>{{pulseLength}}</td>
		</tr>
		{{/if}}
		{{#if pulsePeriod}}
		<tr>
			<th><label for="id_pulsePeriod">Pulse Period:</label></th>
			<td>{{pulsePeriod}}</td>
		</tr>
		{{/if}}
		{{#ifunequal filter -1}}
		<tr>
			<th><label for="id_filter">Filter:</label></th>
			<td>{{filter}}</td>
		</tr>
		{{/ifunequal}}
		{{#ifunequal eVperchannel -1}}
		<tr>
			<th><label for="id_eVperchannel">EV Per Channel:</label></th>
			<td>{{eVperchannel}}</td>
		</tr>
		{{/ifunequal}}
		{{#ifunequal numberofChannels -1}}
		<tr>
			<th><label for="id_numberofChannels"># Channels:</label></th>
			<td>{{numberofChannels}}</td>
		</tr>
		{{/ifunequal}}
		{{#ifunequal vacuum -1}}
		<tr>
			<th><label for="id_vacuum">Vacuum:</label></th>
			<td>{{vacuum}}</td>
		</tr>
		{{/ifunequal}}
		
		<div class="plot-container">
			<span class="alert" id="instrument_message"><br/><br/></span>
			<div id="plotDiv" class="flotPlot"></div>
		</div>
	</table>
